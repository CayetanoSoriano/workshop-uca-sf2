{% extends 'workshopBlogBundle::BlogBundle.html.twig' %}
{% block content %}
        {% for post in posts %}
        <div class="well">
            <h2><a href="{{path('_BlogView',{'slug':post.slug})}}">{{post.title|title}}</a></h2>
            <p>{{post.text|truncate(255,true)}}</p>
            <p>{{post.date|date("m/d/Y")}}</p>
        </div>
        {% endfor %}
{% endblock %}