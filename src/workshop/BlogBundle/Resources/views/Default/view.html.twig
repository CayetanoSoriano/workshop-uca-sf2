{% extends 'workshopBlogBundle::BlogBundle.html.twig' %}
{% block content %}
<div class="well">
    <h2>{{post.title|title}}</h2>
    <p>{{post.text}}</p>
    <p>{{post.date|date("m/d/Y")}}</p>
</div>
{% endblock %}

{% block comments %}
<div class="row-fluid">
    <div class="span8">
        <h2>Comments</h2>
    </div>
</div>
{% for comment in comments %}
<div class="row-fluid">
    <div class="span8">
        <div class="well">
            <p>
                {{comment.text}}
            </p>
        </div>
    </div>
</div>

{% endfor %}
{% endblock %}