{% extends 'workshopBlogBundle::BlogBundle.html.twig' %}
{% block content %}
<div class="well">
    <h2>{{post.title|title}}</h2>
    <p>{{post.text}}</p>
    <p>{{post.date|date("d/M/Y")}}</p>
</div>
{% endblock %}

{% block comments %}
<div class="row-fluid">
    <div class="span8">
        <h2>Comments</h2>
    </div>
</div>
{% for comment in comments %}
<div class="row-fluid">
    <div class="span8">
        <div class="well">
            <p>
                {{comment.text}}
            </p>
        </div>
    </div>
</div>
{% endfor %}

<div class="row-fluid">
    <div class="span8">
        <form action="{{ path('_BlogCommentSave') }}" method="post" {{ form_enctype(form) }}>
            {{form_widget(form)}}
            <input type="submit">
        </form>
    </div>
</div>
{% endblock %}